<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="Movie_Management_System_By_Using_Hibernate" transaction-type="RESOURCE_LOCAL">
	  <class>com.Entity.User_Details</class>
	  <class>com.Entity.Admin_Details</class>
	  <class>com.Entity.Theatre_Details</class>
	  <class>com.Entity.Movie_Details</class>
	  <class>com.Entity.Payment_Details</class>
	  <class>com.Entity.TicketDetails</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/movie_management_system_using_hibernate"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
			
		</properties>
	</persistence-unit>
</persistence>
